{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$defs": {
        "color": {
            "type": "string",
            "pattern": "^#?(?:[a-fA-F\\d]{3}){1,2}$"
        },
        "function": {
            "type": "string",
            "pattern": "^((?:\\((?1)\\)|(?:(?:(?2)(?:\\((?1)(?:,\\s*(?1))*\\))|(?:(\\b[A-Za-z_]\\w*\\b)|\\b\\d+\\b))))(?:\\s*[+\\-*\\/%]\\s*(?1))?)$"
        },
        "typeMap": {
            "type": "object",
            "additionalProperties": {
                "oneOf": [
                    {
                        "type": "number"
                    },
                    {
                        "type": "string"
                    }
                ]
            }
        },
        "value": {
            "oneOf": [
                {
                    "type": "number"
                },
                {
                    "type": "object",
                    "properties": {
                        "variables": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string",
                                "pattern": "^[A-Za-z]\\w*(?:\\.[A-Za-z]\\w*)*$"
                            }
                        },
                        "formula": {
                            "oneOf": [
                                {
                                    "$ref": "#/$defs/function"
                                },
                                {
                                    "type": "string"
                                }
                            ]
                        }
                    },
                    "additionalProperties": false,
                    "required": [
                        "formula"
                    ]
                }
            ]
    }
    },
    "properties": {
        "constants": {
            "type": "object",
            "additionalProperties": {
                "oneOf": [
                    {
                        "type": "number"
                    },
                    {
                        "$ref": "#/$defs/function"
                    },
                    {
                        "type": "object"
                    }
                ]
            }
        },
        "types": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "color": {
                        "$ref": "#/$defs/color"
                    },
                    "mulsAgainst": {
                        "$ref": "#/$defs/typeMap"
                    },
                    "mulsFrom": {
                        "$ref": "#/$defs/typeMap"
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name",
                    "color"
                ]
            }
        },
        "stats": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "short": {
                        "type": "string"
                    },
                    "color": {
                        "$ref": "#/$defs/color"
                    },
                    "flags": {
                        "type": "array",
                        "items": {
                            "enum": [
                                "health",
                                "depletable",
                                "battle"
                            ]
                        },
                        "uniqueItems": true
                    },
                    "value": {
                        "oneOf": [
                            {
                                "type": "string"
                            },
                            {
                                "$ref": "#/$defs/value"
                            }
                        ]
                    },
                    "stages": {
                        "oneOf": [
                            {
                               "type": "string"
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "op": {
                                        "type": "string",
                                        "pattern": "^[+\\-*\\/%]$"
                                    },
                                    "values": {
                                        "type": "object",
                                        "patternProperties": {
                                            "^[+-]?\\d+$": {
                                                "type": "number"
                                            }
                                        },
                                        "additionalProperties": false
                                    }
                                },
                                "additionalProperties": false,
                                "required": [
                                    "op",
                                    "values"
                                ]
                            }
                        ]
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name",
                    "value"
                ]
            }
        },
        "statmods": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "default": {
                        "type": "number"
                    }
                },
                "additionalProperties": {
                    "type": "number"
                },
                "required": [
                    "name",
                    "default"
                ]
            }
        },
        "levelings": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "min": {
                        "type": "integer"
                    },
                    "max": {
                        "type": "integer"
                    },
                    "formulae": {
                        "type": "object",
                        "patternProperties": {
                            "^\\d+$": {
                                "$ref": "#/$defs/function"
                            }
                        }
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name",
                    "min",
                    "max",
                    "formulae"
                ]
            }
        },
        "genders": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "color": {
                        "$ref": "#/$defs/color"
                    },
                    "symbol": {
                        "type": "string"
                    },
                    "mates": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "uniqueItems": true
                    },
                    "bypassGroups": {
                        "type": "boolean",
                        "default": false
                    },
                    "checkOrder": {
                        "type": "integer",
                        "default": 0
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name"
                ]
            }
        },
        "breedgroups": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "color": {
                        "$ref": "#/$defs/color"
                    },
                    "mates": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "uniqueItems": true
                    },
                    "bypassGenders": {
                        "type": "boolean",
                        "default": false
                    },
                    "checkOrder": {
                        "type": "integer",
                        "default": 0
                    }
                },
                "additionalProperties": false,
                "required": [
                    "name"
                ]
            }
        }
    },
    "additionalProperties": false
}